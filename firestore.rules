rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========== HELPER FUNCTIONS ==========
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // ========== USERS COLLECTION ==========
    match /users/{userId} {
      // Users can read/write their own data
      allow read, write: if isOwner(userId);
      
      // Admins can read and update any user (for granting access)
      allow read, write: if isAdmin();
      
      // User's results subcollection
      match /results/{resultId} {
        allow read, write: if isOwner(userId);
        allow read: if isAdmin();
      }
      
      // User's payments subcollection
      match /payments/{paymentId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow read: if isAdmin();
      }
    }
    
    // ========== TESTS COLLECTION ==========
    match /tests/{testId} {
      // TEMPORARY: Allow anyone to read ALL tests (for debugging)
      // TODO: Restore status check after fixing auth issue
      allow read: if true;
      
      // Only admins can manage tests
      allow create, update, delete: if isAdmin();
    }
    
    // ========== FOLDERS COLLECTION ==========
    match /folders/{folderId} {
      // Anyone can read folders (for browsing)
      allow read: if true;
      
      // Only admins can manage folders
      allow create, update, delete: if isAdmin();
    }
    
    // ========== RESULTS COLLECTION (Global Leaderboard) ==========
    match /results/{resultId} {
      // Authenticated users can read (for leaderboard)
      allow read: if isAuthenticated();
      
      // Users can create their own results
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
        
      // Users can delete their own results (for cleanup - keeping only 5 recent)
      allow delete: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
        
      // No updates (results are immutable once created)
      allow update: if false;
    }
    
    // ========== PAYMENTS COLLECTION (Global - Admin View) ==========
    match /payments/{paymentId} {
      // Users can create payments for themselves
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      
      // Users can read their own payments
      allow read: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      
      // Admins can read all payments
      allow read: if isAdmin();
      
      // No modifications after creation (payment records are immutable)
      allow update, delete: if false;
    }
    
    // ========== ACCESS GRANTS COLLECTION (Admin Audit Log) ==========
    match /accessGrants/{grantId} {
      // Only admins can create access grants (audit log)
      allow create: if isAdmin();
      
      // Admins can read access grants
      allow read: if isAdmin();
      
      // No modifications (audit log is immutable)
      allow update, delete: if false;
    }
    
    // ========== ADMINS COLLECTION ==========
    match /admins/{adminId} {
      // Authenticated users can read (to verify admin status during login)
      allow read: if isAuthenticated();
      
      // No one can write via client (manage via Firebase Console only)
      allow write: if false;
    }
  }
}
